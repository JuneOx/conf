module load avatar
module load geoloc
module load urlopen
module load tune
module load mpd
module load extsay

set extsay_script_path = ~/.mcabber/extsay.sh

set avatar_directory = ~/.mcabber/avatars
set avatar_font_height = 16
set avatar_font_width  = 8
set avatar_background = 255

set geoloc_interval = 5

set tune_interval = 10

#set extsay_split_win = 1
#set extsay_win_height = 200

set url_regex = "(((https?|ftps?|nntp)://)|www[.][-a-z0-9.]+|(mailto:|news:))(%[0-9A-F]{2}|[-_.!~*';/?:@&=+$,#[:alnum:]])+"
#set url_handler = ~/.mcabber/urlcmd.sh
