set username = user@domain.com
set password = password
set server = talk.google.com
set jid =  user@domain.com
set ssl = 1
set ssl_ignore_checks = 0
set logging = 1
set load_logs = 1
set logging_dir = ~/.mcabber/histo/
set statefile = ~/.mcabber/mcabber.state
set spell_enable = 1
set spell_lang = ru_RU
set spell_encoding = UTF-8
# Alt-v начать многострочное сообщение
bind M118 = msay toggle
# что бы и в русской раскладки работало, т.е. Alt-м
bind MU1084 = msay toggle
# и по Alt-Enter отправляем сообщение (По-умолчанию работает Ctrl-d)
bind M13 = msay send

#set pgp = 1
#set pgp_private_key = "xxxxxxxxxxxxxxxx"

set fifo_name = ~/.mcabber/mcabber.fifo
set fifo_hide_commands = 0
set fifo_ignore = 0

set autoaway = 600

